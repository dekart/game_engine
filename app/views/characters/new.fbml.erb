<%= title(fb_i(t(".title"))) %>

<% form_for @character, :html => {:requirelogin => 1} do |form| %>
  <%= form.fields %>

  <%= form.submit %>

  <div class="note"><%= raw t(".note", :submit => t(".submit"), :application => fb_app_name) %></div>
<% end %>

<%= raw t(".already_registered.text", 
      :skip_form => link_to(t(".already_registered.skip_form"), root_url, :requirelogin => 1)
    ) %>