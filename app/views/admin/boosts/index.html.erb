<%= admin_title(t(".title")) %>

<div class="controls">
  <%= link_to t(".controls.new"), new_admin_boost_path %>
</div>

<% collection @boosts do %>
  <table id="boost_list" class="data">
    <tr>
      <th><%= Boost.human_attribute_name("image") %></th>
      <th><%= Boost.human_attribute_name("name") %></th>
      <th><%= Boost.human_attribute_name("level") %></th>
      <th><%= Boost.human_attribute_name("basic_price") %></th>
      <th><%= Boost.human_attribute_name("vip_price") %></th>
      <th><%= Boost.human_attribute_name("attributes") %></th>
      <th><%= Boost.human_attribute_name("state") %></th>
      <th><%= Boost.human_attribute_name("state") %></th>
    </tr>
    <% @boosts.each do |boost| %>
      <tr>
        <td class="image"><%= boost_image(boost, :icon) if boost.image? %></td>
        <td class="name"><%= link_to(boost.name, edit_admin_boost_path(boost)) %></td>
        <td class="level"><%= boost.level %></td>
        <td class="basic_price"><%= number_to_currency(boost.basic_price) %></td>
        <td class="vip_price"><%= number_to_currency(boost.vip_price) %></td>
        <td class="attributes">
          <%= content_tag :div, "%s: %d" % [Boost.human_attribute_name("attack"), boost.attack] if boost.attack != 0 %>
          <%= content_tag :div, "%s: %d" % [Boost.human_attribute_name("defence"), boost.defence] if boost.defence != 0 %>
          <%= content_tag :div, "%s: %d" % [Boost.human_attribute_name("damage"), boost.damage] if boost.damage != 0 %>
        </td>
        <td class="state"><%= admin_state(boost) %></td>
        <td class="controls">
          <%= link_to t(".controls.edit"), edit_admin_boost_path(boost) %>
          <%= link_to(t(".controls.publish"), publish_admin_boost_path(boost),
                :method => :put,
                :confirm => t(".controls.publish_confirm")) if boost.can_publish? %>
          <%= link_to(t(".controls.hide"), hide_admin_boost_path(boost),
                :method => :put) if boost.can_hide? %>
          <%= link_to(t(".controls.delete"), admin_boost_path(boost),
                :method => :delete,
                :confirm => t(".controls.delete_confirm")) if boost.can_mark_deleted? %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
