<%= title(t(".title")) %>

<%= render("inventories/buttons", :current => :inventory) %>

<% if @inventories.size > 0 %>
  <div id="inventory_fight_attributes">
    <%= render("characters/fight_attributes") %>
  </div>
<% end %>

<% inventory_free_slots_note do |free_slots| %>
  <div class="note">
    <%= t(".free_slots.text",
          :count => free_slots,
          :count_label => span_tag(free_slots, :value)
        ).html_safe %>

    <%= link_to(t(".free_slots.link").html_safe, equipment_inventories_path) %>
  </div>
<% end %>

<div id="inventory_list" class="inventory_list">
  <%= render("list", :inventories => @inventories) %>
</div>

<% dom_ready do %>
  $(document).bind('items.used', function(){
    $.get('<%= inventories_path %>');
  });
<% end %>