<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

<% javascript_tag do %>
  var signed_request = '<%= escape_javascript(fb_signed_request) %>';
<% end %>

<%= stylesheet_link_tag(%w{qtip application ui-custom}) %>

<%= javascript_include_tag(
      %w{
        jquery jrails visibility 
        jquery/labelify jquery/dialog jquery/scroll_to jquery/qtip2 jquery/history jquery/tmpl jquery/jcarousel
        jquery/ui/core jquery/ui/widget jquery/ui/mouse jquery/ui/draggable jquery/ui/droppable jquery/ui/tabs jquery/ui/slider
        signed_request facebook_credits promo_block invite_dialog stream_dialog upgrade_sliders timer boost
        application
      }, 
      :cache => "cache/all"
    ) %>

<% javascript_tag do %>
  if(typeof window.jsLoadedProperly === 'undefined'){
    if( confirm('The page wasn\'t loaded properly because of some connection problem. Would you like to reload it?') ) {
      // TODO: Send notification to exception tracking if this code was triggered
      window.location.reload();
    }
  }
<% end %>

<title><%= t('app_name') %></title>

<%= tag(:meta, :property => 'fb:app_id', :content => facepalm.app_id) %>

<%= yield(:html_header) %>

<% google_analytics do %>
  <% if current_character %>
    <%= ga_set_variable(1, 'Level', character_level_group(current_character), :visitor) %>
    <%= ga_set_variable(2, 'Gender', current_user.gender.to_s.titleize, :visitor) %>
  <% end %>
  
  <%= ga_set_variable(3, 'SSL', request.ssl? ? 'Yes' : 'No', :visitor) %>
<% end %>
