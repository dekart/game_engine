<%= title(fb_i("Invite")) %>

<% content_for :invite_message do %>
  <% fb_i do %>
    Please visit my profile at {app_name}.
    <%= fb_it(fb_app_name) %>
  <% end %>

  <%= fb_req_choice(fb_i("Visit"), root_url) %>
<% end %>

<% fb_request_form(fb_i("Application"), :invite_message, invite_users_path) do %>
  <%= fb_multi_friend_selector(fb_i("Send invitations to friends")) %>
<% end %>