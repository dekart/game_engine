<div id="equippables">
  <h2><%= t(".header") %></h2>

  <% if inventories_grouped_by_item_group.any? %>

    <div id="equippables-tabs">
      <ul>
        <% inventories_grouped_by_item_group.each do |item_group, inventories| %>
          <li><%= link_to(item_group.name, "##{dom_id(item_group, :inventories)}") %></li>
        <% end %>
      </ul>
      
      <% inventories_grouped_by_item_group.each do |item_group, inventories| %>
        <% div_for(item_group, :inventories) do %>
          <ul class="carousel-container">
            <% inventories.each do |inventory| %>
              <% content_tag_for(:li, inventory, :equipment, 
                  :'data-placements' => inventory.placements.join(','),
                  :'data-equip' => equip_inventory_path(inventory)) do %>
                <%= inventory_item_image(inventory, :small, :tooltip => true, :count => inventory.amount_available_for_equipment) %>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
    
  <% else %>
    <%= empty_set %>
  <% end %>
</div>
