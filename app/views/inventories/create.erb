<% if !@inventory.new_record? %>
  <% fb_i do %>
    You successfully bought {item_name} for {price}
    <%= fb_it(:item_name, content_tag(:b, fb_i(@item.name))) %>
    <%= fb_it(:price, content_tag(:span, @item.price, :class => :money)) %>
  <% end %>
<% else %>
  <% fb_i do %>
    <%= @inventory.errors.on(:character) %>
    <%= fb_it(:item_name, content_tag(:b, fb_i(@item.name))) %>
  <% end %>
<% end %>