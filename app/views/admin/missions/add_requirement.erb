<% fb_js_string :requirement_fields do %>
  <%= render :partial => "admin/missions/requirements/#{@requirement.name}", :locals => {:requirement => @requirement} %>
<% end %>

<% dom_ready do %>
  var new_requirement = document.createElement("div");

  new_requirement.
    setId('requirement_<%= @requirement.object_id %>').
    setClassName("requirement").
    setInnerFBML(requirement_fields);

  $('requirement_list').appendChild(new_requirement)
<% end %>