<% content_tag(:div, :id => :current_contest, :class => :clearfix, :style => contest_logo_background(current_contest)) do %>
  <div id="contest_info">
    <div class="description"><%= current_contest.description.html_safe %></div>
    
    <% if current_contest.available? %>
      <div class="current_position">
        <%= t('.current_position', 
              :value => content_tag(:span, 
                current_contest.position(current_character),
                :class => 'value') 
              ).html_safe %>
      </div>
    <% end%>
    
    <% if current_contest.finished? %>
      <div class="finished"><%= t(".finished") %></div>
    <% else %>
      <%= contest_timer(current_contest) %>
    <% end %>
    
    <% if current_contest.available? %>
      <div class="buttons clearfix">
        <%= contest_fight_button %>
        <%= link_to(button(:rating), contest_path(current_contest), :class => 'button rating') %>
      </div>
    <% end %>
  </div>
<% end %>
