<table id="co" cellspacing="0" cellpadding="0">
  <tr>
    <td class="basic_money">
      <div class="label"><%= Character.human_attribute_name("basic_money") %></div>
      <div class="value"></div>

      <%= link_to(t(".bank"), new_bank_operation_path,
            :remote => true,
            :class => :bank
          ) %>
    </td>
    <td class="vip_money">
      <div class="label"><%= Character.human_attribute_name("vip_money") %></div>
      <div class="value"></div>

      <%= link_to(t(".premium"), items_path(:anchor => :buy_vip_money), :class => :premium) %>
    </td>
    <td class="health">
      <div class="timer"></div>
      <div class="label"><%= Character.human_attribute_name("health") %></div>
      <div class="value"></div>

      <%= link_to(t(".hospital"), hospital_character_path(:current),
            :remote => true,
            :method => :get,
            :class => :hospital
          ) if Setting.b(:hospital_enabled) %>
    </td>
    <td class="energy">
      <div class="timer"></div>
      <div class="label"><%= Character.human_attribute_name("energy") %></div>
      <div class="value"></div>

      <%= link_to(t(".refill"), refill_dialog_premium_path(:type => :refill_energy),
            :remote => true,
            :method => :post,
            :class => "refill"
          ) %>
    </td>
    <td class="stamina">
      <div class="timer"></div>
      <div class="label"><%= Character.human_attribute_name("stamina") %></div>
      <div class="value"></div>

      <%= link_to(t(".refill"), refill_dialog_premium_path(:type => :refill_stamina),
            :remote => true,
            :method => :post,
            :class => "refill"
          ) %>
    </td>
    <td class="experience">
      <div class="label"><%= Character.human_attribute_name("experience") %></div>
      <div class="value"></div>

      <%= percentage_bar(0) %>
    </td>
    <td class="level">
      <div class="label"><%= Character.human_attribute_name("level") %></div>
      <div class="value"></div>

      <%= link_to(t(".upgrade"), '#upgrade', :class => :upgrade) %>
    </td>
  </tr>
</table>