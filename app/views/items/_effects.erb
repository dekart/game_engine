<% if item.effects? %>
  <h3><%= Item.human_attribute_name("effects") %></h3>

  <% item.effects.each do |effect| %>
    <%= payout(
          effect.name, 
          effect.value > 0 ? "+%d" % effect.value : effect.value,
          :label => t("effects.#{ effect.name }.name")
        ) %>
  <% end %>
<% end %>

<% payout_list(item, item.payouts, :format => :preview) do |p| %>
  <h3><%= Item.human_attribute_name("payouts") %></h3>
  
  <%= p.payout_list %>
<% end %>
