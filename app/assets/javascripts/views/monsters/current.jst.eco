<div class='monster clearfix' id='monster_<%= @monster.id %>'>
  <div class='image'>
    <img src='<%= @monster.image_url %>' alt='<%= @monster.name %>' title='<%= @monster.name %>' />
  </div>

  <div class='info'>
    <div class='name'><%= @monster.name %></div>
    <div class='description'><%= @monster.description %></div>
  </div>

  <%= @rewards @monster.reward, (content)=> %>
    <div class="payouts info">
      <h3><%= I18n.t('monsters.preview.payouts') %></h3>
      <%= content %>
    </div>
  <% end %>

  <div class='info'>
    <div class='fight_time'>
      <span class='label'><%= I18n.t('monsters.preview.current.time_remaining')%></span>
      <span class='value'></span>
    </div>

    <div class='health'>
      <div class='text'><%= I18n.t('monsters.show.health', {'monster' : @monster.name}) %>
        : <span class='value'><%= @monster.hp %>/<%= @monster.health %></span>
      </div>

      <div class='progress_bar'>
        <div class='percentage <%= 'complete' if @percentage >= 100 %>' style='width: <%= @percentage_text %> %'></div>
      </div>
    </div>
  </div>

  <div class='controls'>
    <% if @monster.state == 'progress':%>
      <a href='/monsters/<%= @monster.id %>' class='engage button'><span><%= I18n.t('monsters.preview.current.buttons.engage') %></span></a>
    <% else if monster.state == 'expired' || fight.reward_collectable == false: %>
      <a href='/monsters/<%= @monster.id %>' class='view button'><span><%= I18n.t('monsters.preview.current.buttons.view') %></span></a>
    <% else: %>
      <a href='/monsters/<%= @monster.id %>' class='reward button'><span><%= I18n.t('monsters.preview.completed.buttons.reward') %></span></a>
    <% end %>
  </div>
</div>