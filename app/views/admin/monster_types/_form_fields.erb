<%= form.text_field :name, :required => true, :size => 50 %>
<%= form.text_area :description, :cols => 80, :rows => 5 %>

<% form.field_set form.object.class.human_attribute_name('pictures') do %>
  <%= form.fields 'admin/pictures/form_fields' %>
<% end %>

<%= form.text_field :level, :required => true, :size => 6, :autocomplete => :off %>
<%= form.text_field :health, :required => true, :size => 6, :autocomplete => :off %>
<%= form.text_field :minimum_damage, :required => true, :size => 6, :autocomplete => :off %>
<%= form.text_field :maximum_damage, :required => true, :size => 6, :autocomplete => :off %>
<%= form.text_field :minimum_response, :required => true, :size => 6, :autocomplete => :off %>
<%= form.text_field :maximum_response, :required => true, :size => 6, :autocomplete => :off %>

<%= form.text_field :fight_time, :size => 4 %>

<%= form.text_field :maximum_reward_collectors, :size => 6, :autocomplete => :off %>
<%= form.check_box :power_attack_enabled %>
<%= form.check_box :available_for_friends_invite %>

<%= form.fields 'admin/visibilities/form_fields' %>

<% form.field_set MonsterType.human_attribute_name("effects") do %>
  <%= form.fields "admin/effects/collection" %>
<% end %>

<% form.field_set MonsterType.human_attribute_name("requirements") do %>
  <%= form.fields "admin/requirements/collection" %>
<% end %>

<% form.field_set MonsterType.human_attribute_name("payouts") do %>
  <%= form.text_field :experience, :required => true, :size => 6, :autocomplete => :off %>
  <%= form.text_field :money, :required => true, :size => 6, :autocomplete => :off %>

  <%= form.fields "admin/payouts/collection" %>
<% end %>