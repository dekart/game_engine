<div class="actor">
  <%= character_picture_link(news.character) %>
</div>

<div class="subject">
  <%= item_image(news.item, :icon, :tooltip => true) %>
</div>

<div class="description">
  <%= t(".text",
        :actor  => character_name_link(news.character, {}, {:useyou => true, :capitalize => true}),
        :amount => strong_tag(news.amount),
        :item   => strong_tag(news.amount > 1 ? news.item.plural_name : news.item.name)
      ).html_safe %>
</div>
