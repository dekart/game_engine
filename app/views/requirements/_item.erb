<% requirement(requirement.name, satisfied) do %>
  <%= link_to(item_image(requirement.item, :icon), item_group_items_path(requirement.item.item_group), 
        :class => :image
      ) %>

  <span class="label">
    <%= raw t(".text",
          :name   => content_tag(:span, requirement.item.name, :class => :value),
          :amount => requirement.amount
        ) %>
  </span>
<% end %>