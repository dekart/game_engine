<% message = capture do %>
  <p class="success"><%= t('.accepted') %></p>
<% end %>

var $request = $('#<%= dom_id(app_request) %>');

$request.find('.message').html('<%= escape_javascript(message) %>');
$request.find('.controls').empty();

<%= ga_track_event('Requests', "#{app_request.type_name.titleize} - Accepted", app_request.target.name) %>