<% builder.buttons do %>
  <%= link_to_remote(button(:attack_again),
        :url    => @fight.cause ? respond_fight_path(@fight.cause) : fights_pat$
        :update => :result,
        :html   => {
          :"data-click-once" => true,
          :class => "attack_again button"
        }
      ) %>
<% end %>
<% builder.fail do %>
  <%= t(".message", :name => character_name_link(fight.victim)).html_safe %>
<% end %>

<% builder.help_link(:fights_failure, t('.why_lose')) %>

<% builder.buttons do %>
  <%= link_to_remote(button(:attack_again),
        :url    => @fight.cause ? respond_fight_path(@fight.cause) : fights_path(:victim_id => @fight.victim),
        :update => :result,
        :html   => {
          :"data-click-once" => true,
          :class => "attack_again button"
        }
      ) %>
<% end %>

<table class="payouts" cellspacing="0" cellpadding="0">
  <tr>
    <td class="lost">
      <h3><%= t(".you_lost") %></h3>

      <%= payout(:stamina, Setting.i(:fight_stamina_required)) %>
      <%= payout(:health, fight.attacker_hp_loss) %>
      <%= payout(:basic_money, number_to_currency(fight.loser_money)) %>
    </td>
    <td class="victim_lost">
      <h3><%= t(".victim_lost", :user_name => character_name_link(fight.victim)).html_safe %></h3>

      <%= payout(:health, fight.victim_hp_loss) %>
    </td>
  </tr>
</table>

<% builder.on_ready do %>
  <%= ga_track_event('Fights', 'Lost') %>
<% end %>
