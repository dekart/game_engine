<%= render('layouts/promo_block', :context => :home) if current_character.show_promo_block? %>

<table id="dashboard" cellspacing="0" cellpadding="0">
  <tr>
    <td class="profile">
      <h3><%= link_to(t(".overview.title"), character_path(current_character.key)) %></h3>

      <%= render("characters/attributes", :character => current_character) %>

      <%= render("layouts/fan_specials") if show_fan_specials? %>
    </td>

    <td class="wall">
      <%= render("news/feed",
            :news => @news,
            :character => current_character
          ) %>
    </td>
  </tr>
</table>

<% dom_ready do %>
  <% if @newcomer %>
    MissionController.show();
  <% end %>

  <% if visit_from_app_request? %>
    AppRequestDialogController.show();
  <% end %>
<% end %>