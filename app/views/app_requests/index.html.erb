<%= title(t('.title')) %>

<%= render("relations/buttons", :current => :accept_requests) %>

<% tabs :id => :app_request_tabs do |t| %>
  <% @app_requests_types.each do |type| %>
    
    <% if type == @current_type %>
      <% t.tab(type, t(".tabs.#{type}")) do %>
        <%= render("list", :app_requests => @app_requests ) %>  
      <% end %>
      
    <% else %>
      <% t.tab(type, t(".tabs.#{type}"), app_requests_path(:type => type)) do %>
      <% end %>  
    <% end %>
  <% end %>
<% end %>


<% dom_ready do %>
  AppRequests.setup(<%= @app_requests_types.index(@current_type) %>);
<% end %>