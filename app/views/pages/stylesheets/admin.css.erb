td{vertical-align:middle;}

form .label, form .required {display:inline}

.controls {padding: 5px;}
  .controls a {margin-bottom: 5px; padding: 3px; border: 1px solid #3B5998;}

.serializable {margin: 0 0 15px 15px;}
  .serializable .controls {margin: 10px 0;}
  .serializable .controls a {margin: 5px 0px;}

.serializable_item {margin-bottom: 5px; padding-bottom: 5px; border-bottom: 1px solid #e0e0e0;}
  .serializable_item label {display:block;}


#mission_list .name {font-weight:bold;}
#mission_list .controls a {display:block;}

#mission_fields {width: 100%}
  #mission_fields td {vertical-align: top;}

#item_list .name {font-weight:bold;}
#item_list .controls a {display:block;}

#item_fields {width: 100%}
  #item_fields td {vertical-align: top;}
