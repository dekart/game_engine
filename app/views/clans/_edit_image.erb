<div><%= clan_avatar(clan) %></div>

<div class="clearfix">
  <%= link_to(button(:change_image, :price => content_tag(:span, Setting.i(:clan_change_image_vip_money), :class => :vip_money)),"#", :class => "button change") %>
</div>

<div class="file">
  <% form_for(clan, :url => { :action => :change_image }, :html => { :multipart => true }) do |f| %>
    <%= f.file_field :image, :size => 10 %>
    
    <div class="notice"><%= t(".notice", :price =>Setting.i(:clan_change_image_vip_money))%></div>
    
    <table cellpadding="0" cellspacing="0" class="submit_cancel">
      <tr>
        <td class="submit"><%= f.submit(t(".save")) %></td>
        <td class="cancel"><%= link_to("Cancel", "#")%></td>
      </tr>
    </table>
  <% end %>
</div>

<% dom_ready do %>
  $(".change").click(function(){
    $(".file").show();
    $(this).hide()
  });
  
  $(".cancel a").click(function(){
    $(".file").hide();
    $(".change").show();
  });
<% end %>
