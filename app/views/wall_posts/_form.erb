<% form_for([character, wall_post]) do |form| %>
  <%= form.text_area :text, :label => t('.title') %>

  <%= link_to_remote(button(:submit),
        :url    => [character, wall_post],
        :update => :ajax,
        :with   => "$(this).parents('form').serialize()",
        :html   => {
          :"data-click-once" => true,
          :class => 'publish button'
        }
      ) %>
<% end %>