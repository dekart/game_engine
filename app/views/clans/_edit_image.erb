<div class="image"><%= clan_avatar(clan, :format => :medium) %></div>

<div class="clearfix">
  <%= link_to_function(
        button(:change_image,
          :price => span_tag(Setting.i(:clan_change_image_vip_money), :vip_money)
        ),
        "",
        :class => "button change"
      ) %>
</div>

<div class="file">
  <%= form_for([:change_image, clan], :html => { :multipart => true }) do |f| %>
    <%= f.file_field :image, :size => 10 %>

    <table cellpadding="0" cellspacing="0" class="submit_cancel">
      <tr>
        <td class="submit"><%= f.submit(t(".save")) %></td>
        <td class="cancel"><%= link_to(t(".cancel"), "#")%></td>
      </tr>
    </table>
  <% end %>

  <div class="notice"><%= t(".notice", :price => Setting.i(:clan_change_image_vip_money))%></div>
</div>

<% dom_ready do %>
  ClanEditForm.setup();
<% end %>
