<table class="details" cellspacing="0" cellpadding="0">
  <tr>
    <td class="attacker">
      <div class="character">
        <%= character_name_link(fight.attacker, {:class => :name}, {:useyou => false}) %>
        <%= character_picture_link(fight.attacker, {:class => :picture}, {:size => :small}) %>

        <div class="level">
          <span class="label"><%= Character.human_attribute_name("level") %></span>
          <span class="value"><%= fight.attacker.level %></span>
        </div>
        
        <div class="attributes">
          <div class="attack"><%= fight.attacker.attack %></div>
          <div class="relations"><%= fight.attacker.relations.effective_size %></div>
        </div>
      </div>
      <div class="best_items">
        <strong><%= t(".best_offence") %></strong>

        <% fight.attacker.inventories.best_offence.each do |inventory| %>
          <%= item_image(inventory, :icon) %>
        <% end %>
      </div>
    </td>
    <td class="vs"><%= t(".vs") %></td>
    <td class="victim">
      <div class="character">
        <%= character_name_link(fight.victim, {:class => :name}, {:useyou => false}) %>
        <%= character_picture_link(fight.victim, {:class => :picture}, {:size => :small}) %>

        <div class="level">
          <span class="label"><%= Character.human_attribute_name("level") %></span>
          <span class="value"><%= fight.victim.level %></span>
        </div>
        
        <div class="attributes">
          <div class="defence"><%= fight.victim.defence %></div>
          <div class="relations"><%= fight.victim.relations.effective_size %></div>
        </div>
      </div>
      <div class="best_items">
        <strong><%= t(".best_defence") %></strong>

        <% fight.victim.inventories.best_defence.each do |inventory| %>
          <%= item_image(inventory, :icon) %>
        <% end %>
      </div>
    </td>
  </tr>
</table>

<% content_tag(:div, :class => :item_details, :id => dom_id(fight, :items)) do %>
  <%= link_to_remote(t(".show_items"),
        :url    => used_items_fight_path(fight),
        :update => dom_id(fight, :items)
      ) %>
<% end %>
