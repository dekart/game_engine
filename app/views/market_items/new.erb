<% dialog :id => :market_item do %>
  <h2><%= t(".title") %></h2>

  <div class="item">
    <div class="picture"><%= item_image(@item, :small) %></div>
    <div class="name"><%= @item.name %></div>
  </div>

  <% remote_form_for(@item, :update => :ajax) do |form| %>
    <%= form.hidden_field :inventory_id %>
  
    <%= form.text_field(:amount,
          :size => 3,
          :comment => t(".maximum", :amount => @item.inventory.amount)
        ) %>

    <%= form.text_field(:basic_price, :size => 5) %>

    <%= form.text_field(:vip_price, :size => 5) %>

    <%= form.submit %>
  <% end %>
<% end %>