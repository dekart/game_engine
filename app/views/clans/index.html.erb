<div id="clan">
  <table cellpadding="0" cellspacing="0" width="100%">
    <tr>
      <td><h2><%= t(".title") %></h2></td>
      <td class="controls"><%= clan_button %></td>
    </tr>
  </table>
  
  <%= will_paginate(@clans) %>
  
  <div id="clan_list">
    <table cellpadding="0" cellspacing="0" class="clan_list">
      <tr>
        <th>#</th>
        <th colspan="2"><%= Clan.human_attribute_name("clan") %></th>
        <th colspan="2"><%= Clan.human_attribute_name("paticiants") %></th>
      </tr>
      <% @clans.each_with_index do |clan, index| %>
        <tr valign="middle" class="<%= :my_clan if current_character.member_of?(clan) %>">
          <td class="position"><%= index + 1 %></td>
          <td class="image"><%= clan_avatar(clan, :width => 100) %></td>
          <td class="name"><%= link_to(clan.name, clan_path(clan)) %></td>
          <td class="count"><%= clan.members_count %></td>
        </tr>
      <% end %>
    </table>
  </div>
  
</div>
