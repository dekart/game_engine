<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://www.facebook.com/2008/fbml">
<head>
  <script type="text/javascript">
    var signed_request = '<%= escape_javascript(facebook_signed_request) %>';
  </script>

  <%= stylesheet_link_tag('application', 'qtip') %>

  <%= include_jquery_from_google %>
  <%= javascript_include_tag "jrails", "jquery/tabs", "jquery/dialog", "jquery/scroll_to", 
        "jquery/carousel", "jquery/qtip2", 'jquery/history', 'jquery/tmpl', 'facebook_credits', "application", 
        :cache => "cache/all" %>

  <%= google_analytics %>
</head>
<body>
  <% fb_connect_js(:channel_url => facebook_callback_url + '/channel.html', :cache_url => javascript_path('cache/facebook_connect.js'), :weak_cache => Setting.b(:app_weak_fb_js_cache)) do %>
    $(function(){
      $(document).trigger('facebook.ready');
    });
  <% end %>

  <div id="content">
    <div id="header" class="clearfix">
      <%= link_to("", root_path, :id => :logo) %>
    </div>

    <%= yield %>
  </div>

  <%= dom_ready %>

  <%= google_analytics %>
</body>
</html>
