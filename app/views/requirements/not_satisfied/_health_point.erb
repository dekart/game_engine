<% requirement(requirement.name, false) do %>
  <% if current_character.health_points >= requirement.value %>
    <p>
      <%= t(".restorable.message",
            :required_value => content_tag(:strong, requirement.value),
            :restore_time   => content_tag(:strong, (current_character.hp_restore_time(requirement.value) / 1.minute).ceil)
          ).html_safe %>
    </p>
    
    <div id="refill_options_list" class="clearfix">
      <div class="item">
        <div class="name"><%= t(".restorable.title") %></div>
        <div class="image"><%= asset_image_tag(:refill_health) %></div>
        <div class="controls">
           <%= link_to_remote(button(:refill), 
                 :url    => refill_dialog_premium_path(
                   :type => :refill_health, 
                   :vip_money => Setting.i(:premium_health_price)
                 ),
                 :update => :ajax,
                 :html   => {:class => "premium button"}
               ) %>
        </div>
      </div>
      
      <%= render("requirements/not_satisfied/inventories_list", :payout_name => :health_point) %>
    </div>
  
  <% else %>
    <p>
      <%= t(".low_base_level.message",
            :premium_page => link_to(t("layouts.main_menu.items"), premium_path(:anchor => :services))
          ).html_safe %>
    </p>

    <div class="buttons">
      <%= link_to(button(:get_points), premium_path(:anchor => :services),
            :class => "premium button"
          ) %>
    </div>
  <% end %>
<% end %>
