<h2><%= t(".title") %></h2>

<table class="rating" cellspacing="0" cellpadding="0">
  <tr>
    <th>#</th>
    <th colspan="2"><%= Character.human_name %></th>
    <th><%= Character.human_attribute_name("level") %></th>
    <th></th>
  </tr>

  <% rating_table(collection, :level, current) do |character, position, current| %>
    <% content_tag(:tr, :class => (:current if current)) do %>
      <td class="position"><%= position %></td>
      <td class="picture"><%= character_picture_link(character) %></td>
      <td class="name"><%= character_name_link(character, {}, {:capitalize => true}) %></td>
      <td class="level"><%= character.level %></td>
      <td class="publish last"><%= rating_publish_button(position, :level) if current %></td>
    <% end %>
  <% end %>
</table>
