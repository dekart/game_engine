<td class="message">
  <%= t(".text", 
        :user => character_name_link(app_request.sender), 
        :monster => content_tag(:strong, app_request.monster.name)
      ).html_safe %>
</td>
<td class="image"><%= monster_image(app_request.monster, :small) %></td>

<% if app_request.acceptable? %>
  <td class="controls">
    <%= link_to_remote(button(:view),
          :url => app_request_path(app_request),
          :update => :ajax,
          :method => :put,
          :html => {
            :'data-click-once' => true,
            :class => 'accept button'
          }
        ) %>
  </td>
  
<% else %>
  <td class="controls">
    <%= app_request.acceptance_error %>
  </td>
<% end %>
