<%= title(t(".title")) %>

<div id="gift_form" class="clearfix">
  <div class="note"><%= t(".note") %></div>

  <% collection(@items) do %>
    <table class="items" cellspacing="0" cellpadding="0">
      <% @items.each_slice(3) do |group| %>
        <tr>
          <% group.each do |item| %>
          <td>
            <% div_for(item) do %>
              <%= link_to(item_image(item, :small), polymorphic_path(@gift, :item_id => item.id),
                    :method => @gift.new_record? ? :post : :put
                  ) %>

              <div class="name">
                <%= link_to(item.name, polymorphic_path(@gift, :item_id => item.id),
                      :method => @gift.new_record? ? :post : :put
                    ) %>
              </div>
        
              <div class="effects">
                <%= attack(item.attack) %>
                <%= defence(item.defence) %>

                <% item.effects.each do |effect| %>
                  <%= content_tag(:div, effect.value, :class => effect.name) %>
                <% end %>
              </div>
            <% end %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  <% end %>

  <div class="buttons">
    <%= link_to(button(:skip), @gift.new_record? ? root_path : confirm_gift_path(@gift),
          :class => "skip button"
        ) %>
  </div>
</div>