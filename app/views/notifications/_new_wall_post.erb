<% dialog :new_wall_post_notification do |d| %>
  <h2><%= t(".title") %></h2>

  <div class="wall_post clearfix">
    <div class="picture"><%= character_picture_link(notification.author) %></div>
    <div class="text">
      <%= t(".text", :author => character_name(notification.author)) %>
    </div>
  </div>

  <div class="buttons">
    <%= link_to(button(:read), character_path(current_character), :class => "button read") %>
  </div>

  <%= render("notifications/disable", :notification => notification) %>
<% end %>
