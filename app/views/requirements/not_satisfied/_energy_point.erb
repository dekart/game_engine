<div class="buttons">
  <%= link_to(button(:refill), premium_path,
        :class => "premium button"
      ) %>
</div>

<p>
  <%= raw t(".message",
        :required_value => content_tag(:strong, required_value),
        :restore_time   => content_tag(:strong, (current_character.ep_restore_time(required_value) / 1.minute).ceil)
      ) %>
</p>

<p>
  <%= raw t(".get_more",
        :premium_page => link_to(t(".premium_page"), premium_path)
      ) %>
</p>
