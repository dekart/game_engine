<% if @success %>
  <% fb_i do %>
    You've successfully upgraded <%= params[:attribute] %> to {number}
    <%= fb_it(:number, current_character.attributes[params[:attribute]]) %>
  <% end %>

  <script>
    $('upgrade_<%= params[:attribute] %>').setTextValue('<%= current_character.attributes[params[:attribute]] %>');

    <% if current_character.points == 0 %>
      $('upgrade_list').hide();
      $('upgrade_finished').show();
    <% end %>
  </script>
<% else %>
  <%= fb_i("You cannot upgrade #{ params[:attribute] } because you don't have enough points") %>
<% end %>