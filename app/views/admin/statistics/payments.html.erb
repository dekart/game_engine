<%= admin_title(t('.title'))%>

<%= render("controls") %>

<table>
  <tr>
    <td>
      <div class="section">
        <h2><%= t(".reference_types") %></h2>

        <table class="data">
          <tr>
            <th><%= t(".reference_type") %></th>
            <th><%= t(".users_amount") %></th>
            <th><%= t(".payments_amount") %></th>
            <th><%= t(".payments_per_user") %></th>
            <th><%= t(".paying_amount") %></th>
            <th><%= t(".payments_per_paying") %></th>
          </tr>

          <% @result.each_with_index do |reference, index| %>
            <tr class="<%= 'separator' if index > 0 && @result[index - 1][:users_amount] > 50 && @result[index][:users_amount] <= 50 %>">
              <td><%= reference[:name].blank? ? "-" : reference[:name].humanize %></td>

              <td><%= reference[:users_amount] %></td>

              <td><%= reference[:payments_amount] %></td>

              <td><%= reference[:users_amount] > 0 ? (reference[:payments_amount].to_f / reference[:users_amount]).round(2) : 0 %></td>

              <td><%= reference[:paying_amount] %></td>

              <td><%= reference[:paying_amount] > 0 ? (reference[:payments_amount].to_f / reference[:paying_amount]).round(2) : 0 %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </td>
  </tr>
</table>
