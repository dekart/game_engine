<%= title(t(".title")) %>

<%= render "relations/buttons", :current => :relations %>

<div class="note"><%= t(".note") %></div>

<table width="100%" cellspacing="0" cellpadding="0">
  <tr>
    <td id="alliance_members">
      <h2><%= t(".members.title") %></h2>

      <% collection(@relations) do %>
        <table class="relations" cellspacing="0" cellpadding="0">
          <% @relations.each do |relation| %>
            <%= render :partial => "relations/#{relation.class.to_s.underscore}", :locals => {:relation => relation} %>
          <% end %>
        </table>

        <%= will_paginate(@relations) %>
      <% end %>
    </td>
    <td><%= render :partial => "assignments" %></td>
  </tr>
</table>