<div id="property_result">
  <% if @property.valid? %>
    <div class="buttons">
      <%= link_to_function(button(:publish), property_stream_dialog(@property),
            :class => "publish button"
          ) %>
    </div>
  
    <p>
      <%= raw t(".messages.success",
            :amount         => @amount,
            :property_name  => content_tag(:b, @amount > 1 ? @property.plural_name : @property.name)
          ) %>
    </p>

    <h3><%= t(".you_spent.title") %></h3>

    <div class="payouts">
      <%= payout(:basic_money, number_to_currency(@property.basic_money)) if @property.basic_price > 0 %>
      <%= payout(:vip_money, number_to_currency(@property.vip_money)) if @property.vip_price > 0 %>
    </div>
  <% else %>
    <p><%= @property.errors.on(:character) %></p>
  <% end %>
</div>

<% dom_ready do %>
  $('#property_list').html('<%= escape_javascript(render("list", :properties => @properties)) %>');
  $('#property_income_value').text('<%= number_to_currency(current_character.property_income) %>');
  
  $(document).trigger('result.received');
<% end %>