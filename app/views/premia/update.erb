<% result_for(:premia) do |builder| %>
  <% if flash[:success] %>
    <% builder.success do %>
      <%= flash[:success] %>
    <% end %>
  <% else %>
    <% builder.fail do %>
      <%= flash[:error] %>
    <% end %>
  <% end %>

  <% builder.on_ready do %>
    $('#current_vip_money .value').html(<%= current_character.vip_money %>);
  <% end %>
<% end %>
