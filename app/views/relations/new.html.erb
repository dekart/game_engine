<%= title(t(".title")) %>

<%= render("relations/buttons", :current => :invite) %>

<%= render("relations/note") %>

<% if Setting.b(:friends_invite_enabled) %>
  <div id="users_to_invite" class="invitation_method">
    <% if @recommended.any? %>
      <h2><%= t('.recommended' )%></h2>

      <div class="users clearfix">
        <% @recommended.each do |facebook_id| %>
          <div id="<%= "user_#{facebook_id}" %>" class="user <%= "already_playing" if @app_users.include?(facebook_id) %>">
            <div class="name"><%= fb_name(facebook_id, :linked => false) %></div>
            <div class="image"><%= fb_profile_pic(facebook_id, :size => :normal) %></div>

            <%= link_to_function(button(:invite),
                  invite_dialog(:invitation,
                    :dialog => {
                      :to       => [facebook_id],
                      :title    => t('relations.invitation.title'),
                      :message  => t('relations.invitation.message', :app_name => t('app_name'))
                    },
                    :callback => "$('#user_#{ facebook_id }').fadeOut(1200).find('.name').text('#{ t('.invitation_sent') }')"
                  ),
                  :class => 'invite button'
                ) %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="controls">
      <%= link_to_function(button(:invite_all),
            invite_dialog(:invitation,
              :dialog => {
                :title    => t('relations.invitation.title'),
                :message  => t('relations.invitation.message', :app_name => t('app_name')),
                :data     => {
                  :reference => :invite_page
                }
              }
            ),
            :class => 'invite button'
          ) %>
    </div>
  </div>

  <div class="invitation_method">
    <h2><%= t(".copy_paste.title") %></h2>

    <p><%= t(".copy_paste.note") %></p>

    <p class="invitation_text">
      <%= t(".copy_paste.invitation",
            :app  => t("app_name"),
            :link => invitation_short_url(current_character)
          ).html_safe %>
    </p>
  </div>

<% end %>
