<div class="controls">
  <%= link_to(t(".controls.new"), new_polymorphic_path([:admin, contest, ContestGroup])) %>
</div>

<% collection(contest.groups) do %>
  <table>
    <tr>
      <th><%= ContestGroup.human_attribute_name("levels") %></th>
      <th><%= ContestGroup.human_attribute_name("payouts") %></th>
      <th></th>
    </tr>
    <% contest.groups_in_natural_order.each do |group| %>
      <tr>
        <td class="levels"><%= group.title %></td>
        <td class="payouts">
          <%= admin_payouts_preview(group.payouts) %>
        </td>
        <td class="controls">
          <%= link_to(t(".controls.edit"), edit_polymorphic_path([:admin, contest, group])) %>
          <%= link_to(t(".controls.delete"), polymorphic_path([:admin, contest, group]),
                :method   => :delete,
                :confirm  => t(".controls.delete_confirm")
              ) %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
