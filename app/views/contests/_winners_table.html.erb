<div class="results">
  <% if @contest.groups.length > 1 %>
  
    <div class="tabs">
      <ul>
        <% contest.groups_in_natural_order.each do |group| %>
          <% content_tag_for(:li, group, :tab) do %>
            <%= link_to group.title, "##{dom_id(group)}" %>
          <% end %>
        <% end %>
      </ul>
        
      <% contest.groups_in_natural_order.each do |group| %>
        <%= render 'contests/winner_group', :group => group %>
      <% end %>
    </div>
  
  <% else %>
    <%= render 'contests/winner_group', :group => @contest.groups.first %>
  <% end %>
</div>

<% dom_ready do %>
  Contest.setup();
<% end %>
