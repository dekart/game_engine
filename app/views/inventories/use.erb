<div id="inventory_result">
  <p>
    <% fb_i do %>
      <%= t(".messages.success") %>

      <%= fb_it(:item, fb_i(@inventory.name)) %>
    <% end %>
  </p>

  <h3><%= fb_i(t(".effects")) %></h3>
  <ul>
    <% @inventory.effects.each do |effect| %>
      <% content_tag(:li, :class => effect.name) do %>
        <b><%= fb_i(t("effects.#{effect.name}.name")) %></b>
        <div><%= effect.value %></div>
      <% end %>
    <% end %>
  </ul>

  <% if @inventory.frozen? %>
    <p>
      <% fb_i do %>
        <%= t(".messages.item_gone") %>

        <%= fb_it(:item, fb_i(@inventory.name)) %>
      <% end %>
    </p>

    <% content_for :script do %>
      $('inventory_<%= @inventory.id %>').hide();
    <% end %>
  <% end %>
</div>

<% content_for :script do %>
  $('result').show();
<% end %>