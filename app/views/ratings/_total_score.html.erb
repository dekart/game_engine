<h2><%= t(".title") %></h2>

<table class="rating" cellspacing="0" cellpadding="0">
  <tr>
    <th>#</th>
    <th colspan="2"><%= Character.human_name %></th>
    <th colspan="2"><%= Character.human_attribute_name("total_score") %></th>
  </tr>

  <% rating_table(collection, :total_score, current) do |character, position, current| %>
    <% content_tag(:tr, :class => (:current if current)) do %>
      <td class="position"><%= position %></td>
      <td class="picture"><%= character_picture_link(character) %></td>
      <td class="name"><%= character_name_link(character, {}, {:capitalize => true}) %></td>
      <td class="total_score"><%= character.total_score %></td>
      <td class="publish last"><%= rating_publish_button(position, :total_score) if current %></td>
    <% end %>
  <% end %>
</table>