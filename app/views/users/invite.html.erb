<%= title(t(".title")) %>

<% invite_message = capture do %>
  <%= t(".invite.message",
        :user     => fb_name(current_user, :linked => :false),
        :pronoun  => fb_pronoun(current_user, :possessive => true),
        :app_name => t("app_name")
      ).html_safe %>

  <%= fb_custom_req_choice(
        t(".invite.buttons.accept",
          :user => fb_name(current_user,
            :linked         => false,
            :possessive     => true,
            :firstnameonly  => true
          )
        ),
        invitation_url(current_character.invitation_key,
          :canvas => true,
          :reference_code => reference_code(:invite_form_accept)
        )
      ) %>

  <%= fb_custom_req_choice(
        t(".invite.buttons.visit_profile",
          :user => fb_name(current_user,
            :linked         => false,
            :possessive     => true,
            :firstnameonly  => true
          )
        ),
        character_url(current_character.key,
          :canvas => true,
          :reference_code => reference_code(:invite_form_profile)
        )
      ) %>
<% end %>

<%= render "relations/buttons", :current => :invite %>

<%= render "relations/note" %>

<div class="invitation_type" id="invitation_form">
  <% fb_server_fbml do %>
    <%= stylesheet_link_tag(skin_path) %>

    <div id="invitation_form_fbml">
      <% fb_request_form(t(".invite.title"), invite_users_url(:from_selector => true, :signed_request => facebook_signed_request), invite_message, :target => :_top) do %>
        <div class="selector">
          <%= fb_multi_friend_selector(t(".invite.note"),
                :exclude_ids => current_user.invitations.exclude_ids.join(","),
                :cols => 3,
                :rows => 3
              ) %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="invitation_type">
  <h2><%= t(".copy_paste.title") %></h2>

  <p><%= t(".copy_paste.note") %></p>

  <p class="invitation_text">
    <%= t(".copy_paste.invitation",
          :app  => t("app_name"),
          :link => invitation_short_url(current_character)
        ).html_safe %>
  </p>
</div>
