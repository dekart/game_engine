<div id="shop_result">
  <% if @inventory.valid? %>
    <div class="buttons">
      <%= link_to_function(button(:publish), inventory_stream_dialog(@inventory),
            :class => "publish button"
          ) %>
      
      <%= link_to(button(:inventory), inventories_url, 
            :class => "inventory button"
          ) %>
    </div>

    <p>
      <%= raw t(".messages.success",
            :amount     => @amount,
            :item_name  => content_tag(:b, @amount > 1 ? @item.plural_name : @item.name)
          ) %>
    </p>

    <h3><%= t(".you_spent.title") %></h3>

    <div class="payouts">
      <% if @item.basic_price.to_i > 0 %>
        <%= payout(:basic_money, number_to_currency(@inventory.basic_money)) %>
      <% end %>

      <% if @item.vip_price.to_i > 0 %>
        <%= payout(:vip_money, number_to_currency(@inventory.vip_money)) %>
      <% end %>
    </div>
  <% else %>
    <p><%= @inventory.errors.on(:character) %></p>
  <% end %>
</div>

<% fb_js_string :fight_attributes do %>
  <%= render :partial => "characters/fight_attributes" %>
<% end %>

<% content_for :script do %>
  Inventory.onPurchase();

  if($('inventory_fight_attributes')){
    $('inventory_fight_attributes').setInnerFBML(fight_attributes);
  }

  $('result').show();
<% end %>