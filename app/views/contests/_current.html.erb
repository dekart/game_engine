<div id="current_contest" class="contest clearfix" style="<%= contest_logo_background(current_contest) %>">
  <div id="contest_info">
    <div class="description"><%= current_contest.description.html_safe %></div>

    <% if current_contest.started? %>
      <div class="current_position">
        <%= t('.current_position',
              :value => span_tag(current_contest.position(current_character), :value)
            ).html_safe %>
      </div>
    <% end %>

    <%= contest_timer(current_contest) unless current_contest.finished? %>

    <% if current_contest.started? %>
      <div class="buttons clearfix">
        <%= contest_action_button(current_contest) unless current_contest.finished? %>

        <%= link_to(button(:rating), contest_path(current_contest), :class => 'button rating') %>
      </div>
    <% end %>
  </div>
</div>