<div class="newsfeed" id="newsfeed">
  <h3>
    <%= character == current_character ?
            t(".title_my") :
            t(".title", :user => character_name(character, :possessive => true)) %>
  </h3>

  <% collection(news) do %>
    <% news.each do |post| %>
      <div id="<%= dom_id(post) %>" class="<%= [post.type_name, :news, :clearfix].join(' ') %>">
        <div class="time"><%= l(post.created_at, :format => :short) %>:</div>

        <%= render("news/#{post.type_name}", :news => post) %>
      </div>
    <% end %>
  <% end %>
</div>
