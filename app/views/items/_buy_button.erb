<%= form_tag(inventories_path(:item_id => item.id), :remote => true, :class => :clearfix) do %>
  <%= amount_select_tag(:id => item.id, :vip_price => item.vip_price, :basic_price => item.basic_price) %>

  <%= link_to_function(button(:buy), "$(this).parent('form').submit()",
        :class => "buy button"
      ) %>
<% end %>