<div id="inventory_result">
  <p>
    <% fb_i do %>
      <%= t(".messages.success") %>
      <%= fb_it(:item_name, content_tag(:b, fb_i(@inventory.name))) %>
    <% end %>
  </p>

  <h3><%= fb_i(t(".you_received.title")) %></h3>

  <div class="payouts">
    <%= payout(:basic_money, Character.human_attribute_name("basic_money"), @inventory.sell_price) %>
  </div>
</div>

<% content_for :script do %>
  $('result').show();
  $('<%= dom_id(@inventory) %>').hide();
<% end %>