RAILS_ENV=<%= rails_env %>
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:<%= "/home/#{user}/.rbenv/shims:/home/#{user}/.rbenv/bin:$PATH" %>

# Delayed Job Processor

* * * * *     cd <%= current_path %> && flock -n ./tmp/pids/delayed_job.lock <%= current_path %>/script/delayed_job run >> <%= shared_path %>/log/delayed_job.log 2>&1

# Scheduler

* * * * *     cd <%= current_path %> && flock -n ./tmp/pids/scheduler.lock <%= current_path %>/script/scheduler >> <%= shared_path %>/log/scheduler.log 2>&1


# Rake Tasks

0 5 * * *     cd <%= current_path %> && flock ./tmp/pids/rake.lock rake app:cleanup --trace >> <%= shared_path %>/log/cleanup.log 2>&1

0 4 * * *     cd <%= current_path %> && flock ./tmp/pids/rake.lock rake app:statistics:generate --trace >> <%= shared_path %>/log/statistics.log 2>&1

# Archieve backups
45 * * * * gzip *.sql

# Must have a line break before end of file. God damn you crontab!
