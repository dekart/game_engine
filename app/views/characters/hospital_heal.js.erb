<%= render_to_result(:hospital_heal) do |builder| %>
  <% if @result %>
    <% builder.success do %>
      <%= t(".success") %>
    <% end %>
  <% else %>
    <% if current_character.errors.any? %>
      <% builder.fail do %>
        <%= current_character.errors[:base].join("\n") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

$(document).trigger('close.dialog');