<%= title(fb_i(t(".title"))) %>

<div id="item_groups">
  <% ItemGroup.visible_in_shop.each do |group| %>
    <% if group == @item_group %>
      <b><%= fb_i(@item_group.name) %></b>
    <% else %>
      <%= link_to(fb_i(group.name), item_group_items_path(:item_group_id => group.id)) %>
    <% end %>
  <% end %>
</div>

<% if @special_items.any? %>
  <table class="item_list" id="special_items">
    <% @special_items.each do |item| %>
      <%= render :partial => item %>
    <% end %>
  </table>
<% end %>

<%= will_paginate @items %>

<table class="item_list" cellspacing="0">
  <% @items.each do |item| %>
    <%= render :partial => item %>
  <% end %>
</table>

