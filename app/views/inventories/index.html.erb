<div id="inventory_fight_attributes">
  <%= render :partial => "characters/fight_attributes" %>
</div>

<%= title(t(".title")) %>

<%= render "inventories/buttons", :current => :inventory %>

<% inventory_free_slots_note do |free_slots| %>
  <div class="note">
    <%= raw t(".free_slots.text",
          :count => free_slots,
          :count_label => content_tag(:span, free_slots, :class => :value)
        ) %>
    
    <%= raw link_to(t(".free_slots.link"), equipment_inventories_path) %>
  </div>
<% end %>

<div id="inventory_list">
  <%= render :partial => "list", :locals => {:inventories => @inventories} %>
</div>