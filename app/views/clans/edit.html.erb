<div id="clan_form">
  <h2><%= t(".title") %></h2>
  
  <% if current_character.clan == @clan && current_character.clan_member.creator? %>
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td>
          <%= render("form", :clan => @clan) %>
          
          <div id="clan_members">
            <%= render("clan_members", :clan => @clan) %>
          </div>
          
        </td>
        <td class="image"><%= render("edit_image", :clan => @clan) %></td>
      </tr>
    </table>
   
  <% else %>
    <%= t(".no_access") %>
  <% end %>  
</div>  