<% form.field_set do %>
  <%= form.select :key, AchievementType::KEYS, :required => true, :include_blank => true %>
  <%= form.text_field :value, :required => true %>
<% end %>

<% form.field_set do %>
  <%= form.text_field :name, :size => 40, :required => true %>
  <%= form.text_area  :description, :cols => 80, :rows => 5, :required => true %>
  <%= form.file_field :image, :after_field => form.attachment_preview(:image, :original) %>
<% end %>

<% form.field_set AchievementType.human_attribute_name("payouts") do %>
  <%= form.fields "admin/payouts/collection" %>
<% end %>
