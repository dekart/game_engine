<%= admin_title(t(".title", :name => @item.name)) %>

<% form_for([:admin, @item], :html => {:multipart => true}) do |form| %>
  <%= form.fields %>

  <% dom_ready do %>
	$('form.edit_item').submit(function(){
		if ($('#payout_list').children().size() == 0) {
	      $('<input type="hidden" />').
		    attr({
		      name: "item[payouts]",
		      value: ""
		    }).
		    appendTo($('#payout_list'));
		}
		return true;
	});
  <% end %>

  <%= form.submit_and_continue %>
<% end %>
