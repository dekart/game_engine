<% dialog :id => :clan_application_state_notification do |d| %>
  <h2><%= t(".#{notification.status}.title") %></h2>
  
  <table width="100%">
    <tr>
      <td>
        <div class="text">
          <%= t(".#{notification.status}.text",
                :clan => content_tag(:strong, notification.clan.name)
              ).html_safe %>
        </div>
        <% if notification.status == "accepted" %>
          <div class="buttons">
            <%= link_to(button(:watch_clan), clan_path(notification.clan), :class => "watch button") %>
          </div>  
        <% end %>  
      </td>
      <td class="avatar">
        <%= clan_avatar(notification.clan, :width => 100) %>
      </td>
    </tr>  
  </table>

  <%= render("notifications/disable", :notification => notification) %>

<% end %>
