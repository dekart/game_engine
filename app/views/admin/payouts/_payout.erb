<div class="payout" id="<%= payout.object_id %>">
  <div class="<%= payout.name %> serializable_item">
    <%= hidden_field_tag("#{container}[payouts][payout_#{payout.object_id}][type]", payout.name) %>

    <%= link_to_function(
          t(".remove"),
          "$('payout_list').removeChild($('payout_#{payout.id}'))",
          :class => :remove
        ) %>

    <h4><%= t("payouts.#{payout.name}.name") %></h4>

    <% fields_for "#{container}[payouts][payout_#{payout.object_id}]", payout do |form| %>
      <%= form.fields "admin/payouts/form_fields/#{payout.name}" %>
      <%= form.fields "admin/payouts/form_fields/common" %>
    <% end %>
  </div>
</div>