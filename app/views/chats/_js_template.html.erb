<script id='chat_template' type = 'text/x-jquery-tmpl'>
  <div class="message" data-message-id="${id}">
    <div class="picture">
      <a href="/characters/${character_key}">
        <fb:profile-pic uid="${facebook_id}" linked="false" size="square"></fb:profile-pic>
      </a>
    </div>
    <div class="name">
      <a href="/characters/${character_key}">${name}</a>
    </div>
    <div class="created_at">${created_at}</div>
    <div class="text">${text}</div>
  </div>
</script>