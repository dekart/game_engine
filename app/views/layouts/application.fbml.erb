<fb:fbml>
  <% if Rails.env.development? %>
    <style><%= render :file => "pages/stylesheets/common.css.erb" %></style>
    <style><%= render :file => "pages/stylesheets/default.css.erb" %></style>

    <% %w{facebooker application}.each do |f| %>
      <script><%= File.read(File.join(RAILS_ROOT, "public", "javascripts", "#{f}.js")) %></script>
    <% end %>
  <% else %>
    <%= stylesheet_link_tag("common.css?#{File.mtime(File.join(RAILS_ROOT, "app/views/pages/stylesheets/common.css.erb")).to_i}") %>
    <%= stylesheet_link_tag("default.css?#{File.mtime(File.join(RAILS_ROOT, "app/views/pages/stylesheets/default.css.erb")).to_i}") %>
    
    <%= javascript_include_tag "facebooker", "application" %>
  <% end %>

  <%= render :partial => "layouts/admin/main_menu" %>

  <input type="text" style="width: 1px; height: 1px; border:0px;" id="top_field"/>

<div id="spinner" style="display:none;">
  <%= image_tag("spinner.gif", :alt => t(".spinner.alt")) %>

  <%= fb_i(t(".spinner.text")) %>
</div>

<div id="header">
  <%= link_to(image_tag("logo_200x60.jpg", :alt => "Home"), root_path, :id => :logo) %>

  <table id="main_menu">
    <tr>
      <td>
        <%= link_to(fb_i(t(".main_menu.home")), root_path, :class => :home) %>
        <%= link_to(fb_i(t(".main_menu.character")), character_path(current_character), :class => :profile) %>
      </td>
      <td>
        <%= link_to(fb_i(t(".main_menu.missions")), missions_path, :class => :missions) %>
        <%= link_to(fb_i(t(".main_menu.fights")), new_fight_path, :class => :fights) %>
      </td>
      <td>
        <%= link_to(fb_i(t(".main_menu.items")), items_path, :class => :shop) %>
        <%= link_to(fb_i(t(".main_menu.vip")), buy_money_path, :class => :vip_money) %>
      </td>
      <td>
        <%= link_to(fb_i(t(".main_menu.inventories")), inventories_path, :class => :inventory) %>
        <%= link_to(fb_i(t(".main_menu.properties")), properties_path, :class => :properties) %>
      </td>
      <td>
        <%= link_to(fb_i(t(".main_menu.relations")) + " (%d)" % current_character.relations.size, relations_path, :class => :alliance) %>
        <%= link_to(fb_i(t(".main_menu.rating")), rating_characters_path, :class => :rating) %>
      </td>
    </tr>
  </table>

  <table id="co" cellspacing="0">
    <tr>
      <td class="basic_money">
        <b><%= fb_i(Character.human_attribute_name("basic_money")) %></b>
        (<%= link_to(fb_i(t(".character_overview.bank")), new_bank_operation_path) %>)
        <div id="co_basic_money_timer" class="timer"></div>
        <div id="co_basic_money" class="value"></div>
      </td>
      <td class="vip_money">
        <b><%= fb_i(Character.human_attribute_name("vip_money")) %></b>
        (<%= link_to(fb_i(t(".character_overview.buy_vip_money")), buy_money_path) %>)
        <div id="co_vip_money" class="value"></div>
      </td>
      <td class="health">
        <b><%= fb_i(Character.human_attribute_name("health")) %></b>
        <div id="co_health_timer" class="timer"></div>
        <div id="co_health" class="value"></div>
      </td>
      <td class="energy">
        <b><%= fb_i(Character.human_attribute_name("energy")) %></b>
        <div id="co_energy_timer" class="timer"></div>
        <div id="co_energy" class="value"></div>
      </td>
      <td class="experience">
        <b><%= fb_i(Character.human_attribute_name("experience")) %></b>
        <div id="co_experience_bar"><div id="co_experience_percentage"></div></div>
        <div id="co_experience" class="value"></div>
      </td>
      <td class="level">
        <b><%= fb_i(Character.human_attribute_name("level")) %></b>
        <span id="co_points" style="display:none;">
          (<%= link_to("", upgrade_character_path(current_character), :id => :co_point_link) %>)
        </span>
        <div id="co_level" class="value"></div>
      </td>
    </tr>
  </table>
</div>

<%= fb_i(fb_success(flash[:success])) if flash[:success] %>
<%= fb_i(fb_error(flash[:error])) if flash[:error] %>

<%= content_tag(:div, yield(:result), :id => :result, :style => ("display:none" if @content_for_result.blank?)) %>

<%= yield %>

<script type="text/javascript">
  root_url = '<%= root_url(:canvas => false) %>';

  Character.update(<%= current_character.to_json %>);
</script>

<%#= fb_google_analytics("UA-111105-16") unless in_profile_tab? %>
</fb:fbml>