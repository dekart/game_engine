<%= title(t(".title")) %>

<div id="gift_form" class="clearfix">
  <div class="note"><%= t(".note") %></div>

  <div class="gift">
    <h2><%= t(".gift.title") %></h2>

    <div class="item">
      <%= item_image(@gift.item, :small) %>

      <div class="name"><%= @gift.item.name %></div>

      <div class="effects">
        <%= attack(@gift.item.attack) %>
        <%= defence(@gift.item.defence) %>

        <% @gift.item.effects.each do |effect| %>
          <%= content_tag(:div, effect.value, :class => effect.name) %>
        <% end %>
      </div>
      
      <%= link_to(t(".gift.change"), edit_gift_path(@gift)) %>
    </div>
  </div>

  <div class="friend_groups">
    <% %w{all players non_players}.each do |type| %>
      <%= link_to(t(".groups.#{type}", :app => fb_app_name), gift_path(@gift, :group => type),
            :method => :put,
            :id     => "group_#{type}",
            :class  => (:current if @group == type.to_sym)
          ) %>
    <% end %>
  </div>

  <div class="invitation_form">
    <% content_for :gift_message do %>
      <%= raw t(".request.message",
            :user => fb_name(current_user, :linked => :false),
            :app  => fb_app_name,
            :item => @gift.item.name
          ) %>

      <%= fb_req_choice(
            t(".request.accept", :item => @gift.item.name),
            gift_url(@gift, :reference => :gift)
          ) %>
    <% end %>

    <% fb_request_form(t(".request.title"), :gift_message, confirm_gift_path(@gift)) do %>
      <%= fb_multi_friend_selector(t(".request.note"), 
            :exclude_ids => @exclude_ids.join(",")
          ) %>
    <% end %>
  </div>

  <%= link_to(button(:skip), confirm_gift_path(@gift), :class => "skip button") %>
</div>