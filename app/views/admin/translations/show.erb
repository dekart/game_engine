<%= link_to_remote(h(@translation.value),
      :url    => edit_admin_translation_url(@translation, :canvas => false),
      :method => :get,
      :update => translation_id(@translation.key)
    ) %>

<% content_for :script do %>
  $('<%= translation_id(@translation.key) %>').getParentNode().addClassName('customized')
<% end %>