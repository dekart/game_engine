<div class="buttons clearfix" id="alliance_buttons">
  <% unless current == :relations %>
    <%= link_to(button(:relations), relations_path(:noredirect => true),
          :class => "relations button"
        ) %>
  <% end %>

  <% unless current == :invite %>
    <%= link_to(button(:recruit), invite_users_path,
          :class => "invite button"
        ) %>
  <% end %>

  <%= link_to(button(:hire), premium_path,
        :class => "mercenaries button"
      ) %>

  <% unless current == :gifts %>
    <%= link_to(button(:gift), new_gift_path,
          :class => "gifts button"
        ) %>
  <% end %>
</div>
