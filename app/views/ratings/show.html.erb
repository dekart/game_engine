<%= render("contests/current") if current_contest %>

<% if action_name == "global" %>
  <%= title(t(".title.global")) %>

  <%= render("buttons", :current => :global) %>
<% else %>
  <%= title(t(".title.relations")) %>

  <%= render("buttons", :current => :relations) %>
<% end %>

<% if Setting.b(:total_score_publishing_in_facebook_enabled) %>
  <div class="note" id="rating_score_permissions">
    <p><%= t('.permissions') %></p>
    
    <%= link_to_function(button(:permissions), "Rating.requestPermissions()",
          :class => 'permissions button'
        ) %>
  </div>
<% end %>

<% tabs :id => 'rating_list' do |t| %>
  <% if Setting.b(:total_score_enabled) %>
    <% t.tab "total_score" do %>
      <%= render("total_score", :collection => @total_score, :current => current_character) %>
    <% end %>
  <% end %>
  
  <% t.tab "level" do %>
    <%= render("level", :collection => @level, :current => current_character) %>
  <% end %>
  
  <% t.tab "total_money" do %>
    <%= render("total_money", :collection => @total_money, :current => current_character) %>
  <% end %>
  
  <% t.tab "fights" do %>
    <%= render("fights", :collection => @fights, :current => current_character) %>
  <% end %>
  
  <% t.tab "missions" do %>
    <%= render("missions", :collection => @missions, :current => current_character) %>
  <% end %>
  
  <% t.tab "relations" do %>
    <%= render("relations", :collection => @relations, :current => current_character) %>
  <% end %>
  
  <% t.tab "monsters" do %>
    <%= render("monsters", :collection => @monsters, :current => current_character) %>
  <% end %>
<% end %>

<div class="note"><%= t(".note") %></div>

<% dom_ready do %>
  Rating.setup();
<% end %>
