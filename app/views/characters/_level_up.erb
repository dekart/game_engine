<% dialog :id => :level_up_result do %>
  <h2><%= t(".title") %></h2>

  <div class="text">
    <%= raw t(".text",
          :point_amount => Setting.i(:character_points_per_upgrade),
          :upgrade      => link_to_remote(t(".upgrade_link"),
            :url    => upgrade_character_url(current_character),
            :method => :get,
            :update => :ajax
          )
        ) %>
  </div>

  <div class="buttons">
    <%= link_to_function(button(:continue),
          character_level_up_stream_dialog(:callback => "$(document).trigger('character.level_up_publish')"),
          :class => "continue button"
        ) %>
  </div>
<% end %>

<% dom_ready do %>
  $(document).trigger('character.new_level');

  $(document).
    unbind('character.level_up_publish').
    bind('character.level_up_publish', function(){
      <%= remote_function(
            :url    => upgrade_character_url(current_character),
            :method => :get,
            :update => :ajax
          ) %>
    });
<% end %>