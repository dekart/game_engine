<div class="fighters">
  <h2><%= t(".title") %></h2>

  <% monster.monster_fights.top_damage.each do |fight| %>
    <div class="fighter clearfix">
      <div class="damage"><%= fight.damage %></div>
      <div class="name"><%= character_name_link(fight.character) %></div>
    </div>
  <% end %>
</div>