<%= form.text_field :name, :required => true %>

<%= form.text_field :level, :required => true %>

<div id="item_collection" class="items">
  <h2><%= t(".items") %></h2>

  <%= form.error_message_on :items %>

  <% form.object.items.each do |item| %>
    <%= render("item_fields", :item => item, :amount => form.object.amount_of_item(item)) %>
  <% end %>
</div>

<%= link_to(t(".add_item"), add_item_admin_item_collections_path,
      :remote => true,
      :class => :add_item
    ) %>

<h2><%= ItemCollection.human_attribute_name("payouts") %></h2>

<%= form.fields "admin/payouts/collection" %>
