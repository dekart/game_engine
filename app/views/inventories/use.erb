<div id="inventory_result">
  <p>
    <%= raw t(".messages.success",
          :item => @inventory.name
        ) %>
  </p>

  <h3><%= t(".effects") %></h3>

  <div class="payouts">
    <% @inventory.effects.each do |effect| %>
      <%= payout(effect.name, effect.value, :label => t("effects.#{effect.name}.name")) %>
    <% end %>
  </div>

  <% if @inventory.frozen? %>
    <p>
      <%= raw t(".messages.item_gone",
            :item => @inventory.name
          ) %>
    </p>
  <% end %>
</div>

<% fb_js_string :list do %>
  <%= render :partial => "list", :locals => {:inventories => current_character.inventories} %>
<% end %>

<% dom_ready do %>
  $('result').show();
  $('inventory_list').setInnerFBML(list);
<% end %>