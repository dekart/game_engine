<table id="dashboard">
  <tr>
    <td class="profile">
      <%= link_to(fb_i("Profile Overview"), character_path(current_character), :class => :title) %>

      <ul>
        <li>
          <b><%= fb_i("Attack") %></b>
          <div class="attack">
            <%= "%d (%d+%d)" % [
                  current_character.attack_points,
                  current_character.attack,
                  current_character.inventory_effects[:attack].value
                ] %>
          </div>
        </li>
        <li>
          <b><%= fb_i("Defence") %></b>
          <div class="defence">
            <%= "%d (%d+%d)" % [
                  current_character.defence_points,
                  current_character.defence,
                  current_character.inventory_effects[:defence].value
                ] %>
          </div>
        </li>
        <li>
          <b><%= fb_i("Health") %></b>
          <div class="health"><%= "%d/%d" % [current_character.hp, current_character.health] %></div>
        </li>
        <li>
          <b><%= fb_i("Energy") %></b>
          <div class="energy"><%= "%d/%d" % [current_character.ep, current_character.energy] %></div>
        </li>
      </ul>

      <%= link_to(fb_i("Inventory"), inventories_path, :class => :title) %>

      <p>Display inventory here!!!</p>
    </td>

    <td class="fights">
      <h3><%= fb_i("Latest Fights") %></h3>

      <% if @latest_fights.any? %>
        <table cellspacing="0">
        <% @latest_fights.each do |fight| %>
          <% content_tag_for(:tr, fight) do %>
            <td class="attacker"><%= link_to(fb_profile_pic(fight.attacker.user, :linked => false), fight.attacker) %></td>
            <td class="description">
              <div class="time">
                <%= distance_of_time_in_words_to_now(fight.created_at).capitalize %> ago:
              </div>

              <div><%= fight_description(fight) %></div>
            </td>
            <td class="victim"><%= link_to(fb_profile_pic(fight.victim.user, :linked => false), fight.victim) %></td>
          <% end %>
        <% end %>
        </table>
      <% end %>
    </td>
  </tr>
</table>