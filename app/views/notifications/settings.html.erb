<% dialog :id => :notification_settings do %>
  <%= title(t(".title")) %>

  <% remote_form_for current_character, :url => update_settings_notifications_path, :update => :result,
       :after => '$.dialog.close()' do |form| %>
  
    <div class="notifications">
      <% @notifications.each do |notification| %>
        <div class="notification">
          <%= check_box_tag "notification[ids][]", 
                notification.id, !notification.disabled?, 
                :id => "notification_#{notification.id}" %>
          <%= label_tag "notification_#{notification.id}", t(".types.#{notification.class.name.split("::").last.underscore}") %>
        </div>
      <% end %>
      
    <%= form.submit %>
    
  <% end %>
<% end %>
