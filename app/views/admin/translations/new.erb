<% remote_form_for([:admin, @translation], :url => admin_translations_url(:canvas => false), :update => translation_id(@translation.key)) do |form| %>
  <%= form.hidden_field :key %>

  <%= form.text_field :value, 
        :required => true,
        :after_field => content_tag(:strong, t(".current_value")) + @current_value %>

  <%= form.submit %>
<% end %>