<%= title(t(".title")) %>

<div class="note"><%= t(".note") %></div>

<table id="invitation" cellspacing="0" cellpadding="0">
  <tr>
    <td class="picture"><%= character_picture_link(@character) %></td>
    <td class="name"><%= character_name_link(@character) %></td>
    <td class="level">
      <span class="label"><%= Character.human_attribute_name("level") %></span>
      <span class="value"><%= @character.level %></span>
    </td>
    <td class="controls">
      <%= link_to(button(:accept), invitation_path(@character.id),
            :method => :put,
            :class  => "accept button"
          ) %>
      <%= link_to(button(:ignore), root_path,
            :class => "ignore button"
          ) %>
    </td>
  </tr>
</table>
