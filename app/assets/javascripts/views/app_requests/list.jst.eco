<ul>
  <% for type, requests of @requests: %>
    <li data-tab="<%= type %>">
      <%= I18n.t("app_requests.index.tabs.#{type}", count: _.reduce(requests, ((sum, r)-> sum + (r.senders?.length || 1)), 0)) %>
    </li>
  <% end %>
</ul>

<% for type, requests of @requests: %>
  <div class="tab_content" id="<%= type %>">
    <% for request in requests: %>
      <%=@safe @renderTemplate("app_requests/#{ type }", _.extend({request: request}, @)) %>
    <% end %>
  </div>
<% end %>