<%= title(fb_i("Inventory")) %>

<% if @inventories.count != 0 %>
  <table id="inventory_list">
    <% %w{weapons armors}.each do |type| %>
      <% if @inventories.send(type).any? %>
        <tr>
          <th colspan="4"><%= fb_i(type.capitalize) %></th>
        </tr>
        <% @inventories.send(type).each do |inventory| %>
          <% content_tag_for(:tr, inventory) do %>
            <td class="picture"><%= image_tag(inventory.image.url(:small)) %></td>
            <td class="info">
              <div class="name"><%= inventory.name %></div>
              <div class="description"><%= inventory.description %></div>
            </td>
            <td class="details">
              <% %w{attack defence}.each do |attribute| %>
                <%= content_tag(:div, inventory.send(attribute), :class => attribute) if inventory.send(attribute).to_i > 0 %>
              <% end %>
            </td>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </table>
<% else %>
  <%= fb_i("Your inventory is empty.") %>
  <%= link_to("Go to Shop", items_path) %>
<% end %>