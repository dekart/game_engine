<div id="FB_HiddenIFrameContainer" style="display:none; position:absolute; left:-100px; top:-100px; width:0px; height: 0px;"></div> 
<script>
  var facebook_api_key = '<%= Facebooker.facebooker_config["api_key"] %>';
</script>
  <%= editable_stylesheet_link %>

  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js" %>
  <%= raw fb_connect_javascript_tag %>
  <%= javascript_include_tag "jrails", "application" %>

  <%= render :partial => "admin/layouts/main_menu" %>

  <div id="content">
    <div id="header">
      <%= link_to("&nbsp;", root_path, :id => :logo) %>

      <%= render :partial => "layouts/main_menu" %>
      <%= render :partial => "layouts/character_overview" %>
      <%= render(:partial => "layouts/tip") if current_user.show_tips? %>
    </div>

    <%= flash_block %>

    <%= render "layouts/spinner" %>

    <%= content_tag(:div, yield(:result), :id => :result, :style => ("display:none" if @content_for_result.blank?)) %>

    <% if (current_boss_fights = current_character.boss_fights.with_state(:progress)).any? %>
      <%= render "boss_fights/block", :fights => current_boss_fights %>
    <% elsif current_user.show_tutorial? %>
      <%= render "tutorials/block" %>
    <% end %>

    <%= yield %>
  </div>

  <script><%= yield :script %></script>
  
  <%= fb_google_analytics(Configuration[:app_google_analytics_id]) unless Configuration[:app_google_analytics_id].blank? %>
