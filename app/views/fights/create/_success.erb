<div class="buttons">
  <%= link_to_function(button(:publish), fight_stream_dialog(fight),
        :class => "publish button"
      ) %>
  
  <%= help_request_link(button(:request_help), fight,
        :class => "request_help button"
      ) %>
</div>

<p class="success">
  <% fb_i do %>
    <%= raw t(".message", :pronoun => fb_pronoun(fight.victim.user, :objective => true)) %>

    <%= fb_it(:user_name, character_name_link(fight.victim)) %>
  <% end %>
</p>

<table class="payouts">
  <tr>
    <td class="received">
      <h3><%= fb_i(t(".you_received")) %></h3>

      <%= payout(:experience, fight.experience) %>
      <%= payout(:basic_money, number_to_currency(fight.money)) %>
    </td>
    <td class="lost">
      <h3><%= fb_i(t(".you_lost")) %></h3>

      <%= payout(:energy, Configuration[:fight_energy_required]) %>
      <%= payout(:health, fight.attacker_hp_loss) %>
    </td>
    <td class="victim_lost">
      <h3>
        <% fb_i t('.victim_lost') do %>
          <%= fb_it(:user_name, character_name_link(fight.victim)) %>
        <% end %>
      </h3>

      <%= payout(:health, fight.victim_hp_loss) %>
    </td>
  </tr>
</table>

<% unless fight.cause %>
  <% content_for :script do %>
    Fight.hideVictim(<%= @victim.id %>);
  <% end %>
<% end %>
