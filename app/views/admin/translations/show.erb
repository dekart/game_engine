<%= link_to_remote(@translation.value.present? ? @translation.value : span_tag(t(".no_value"), :empty).html_safe,
      :url    => edit_admin_translation_path(@translation),
      :method => :get,
      :update => translation_id(@translation.key)
    ) %>

<% dom_ready do %>
  $('#<%= translation_id(@translation.key) %>').parent().addClass('customized');
<% end %>
