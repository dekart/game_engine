<div id="inventory_result">
  <p>
    <%= raw t(".messages.success",
          :amount     => @amount,
          :item_name  => content_tag(:b, @amount > 1 ? @inventory.plural_name : @inventory.name)
        ) %>
  </p>

  <h3><%= t(".you_received.title") %></h3>

  <div class="payouts">
    <%= payout(:basic_money, number_to_currency(@inventory.basic_money)) %>
  </div>
</div>

<% fb_js_string :list do %>
  <%= render :partial => "list", :locals => {:inventories => current_character.inventories} %>
<% end %>

<% fb_js_string :fight_attributes do %>
  <%= render :partial => "characters/fight_attributes" %>
<% end %>

<% content_for :script do %>
  $('inventory_list').setInnerFBML(list);
  $('inventory_fight_attributes').setInnerFBML(fight_attributes);
  $('result').show();
<% end %>