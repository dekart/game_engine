<div class="<%= payout.name %>">
  <%= hidden_field_tag("mission[payouts][payout_#{payout.object_id}][type]", payout.name) %>

  <%= label_tag "payout_#{payout.object_id}_value", t("payouts.#{payout.name}.name") %>

  <%= select_tag("mission[payouts][payout_#{payout.object_id}][value]",
        grouped_options_for_select(Item.to_grouped_dropdown, payout.value),
        :id => "payout_#{payout.object_id}_value"
      ) %>

  <%= render :partial => "admin/missions/payouts/common", :locals => {:payout => payout} %>
</div>