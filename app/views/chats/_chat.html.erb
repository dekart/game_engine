<%= render 'chats/js_template' %>

<div class="chat" id="<%= chat_dom_id(chat_id) %>" data-chat-id="<%= chat_id %>" data-template="chat_template">
  <div class="messages">
  </div>
  <div class="timer"></div>
  
  <% form_remote_tag(:url => "/chats/#{chat_id}", :after => "debug('after')",
      :success => "$('##{chat_dom_id(chat_id)}').chat('appendMessage', request)", :datatype => 'json') do |form| %>
    <%= hidden_field_tag :character_id, current_character.id %>
    <%= text_field_tag :text %>
    <%= link_to_function(button(:send), "$(this).parents('form').submit()", :class => 'send button')%>
  <% end %>
</div>

<% dom_ready do %>
  $('#<%= chat_dom_id(chat_id) %>').chat('init', <%= Setting.i(:chat_update_time) %>);
<% end %>