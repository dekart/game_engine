<% if @response.attack_result == true: %>
  <% if @response.fight.monster.state == 'progress': %>
    <div class="buttons clearfix">
      <a href='#' class="attack button" data-power="<%= @response.power_attack %>">
        <span><%= I18n.t("monsters.update.buttons.attack") %></span>
      </a>
    </div>

    <div class="success message">
      <%= I18n.t("monsters.update.message.progress", {'monster': @response.fight.monster.name}) %>
    </div>
  <% end %>
<% end %>
