<p><strong><%= t(".title") %></strong></p>
      
<table class="participants" cellpadding="0" cellspacing="0">
  <% applications.each do |application| %>
    <tr id="application<%= application.id %>">
      <td class="picture"><%= character_picture_link(application.character) %></td>
      <td class="name"><%= character_name_link(application.character) %></td>
      <td class="level">
        <span class="label"><%= Character.human_attribute_name("level") %></span>
        <span class="value"><%= application.character.level %></span>
      </td>
      <td class="controls">
        <div class="approve">
          <%= link_to_remote(button(:accept),
                :url => approve_clan_membership_application_path(application),
                :update => :ajax,
                :method => :put,
                :html => {
                  :'data-click-once' => true,
                  :class => 'accept button'
                }
              ) %>
        </div>    
   
        <div class="reject">
          <%= link_to_remote(asset_image_tag(:icons_delete, :alt => t('.buttons.delete')),
                :url      => reject_clan_membership_application_path(application),
                :method   => :delete,
                :update   => :ajax,
                :confirm  => t(".delete.confirmation"),
                :html     => {
                  :class => "delete"
                }
              ) %>
        </div>     
      </td>
    </tr>
  <% end %>    
</table>