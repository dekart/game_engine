<%= title(t(".title")) %>

<div class="controls">
  <%= link_to(t(".controls.new"), new_admin_tip_path) %>
</div>

<% if @tips.any? %>
  <%= will_paginate @tips %>

  <table id="tip_list">
    <tr>
      <th><%= Newsletter.human_attribute_name("text") %></th>
    </tr>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.text %></td>
        <td class="controls">
          <%= link_to(t(".controls.edit"), edit_admin_tip_path(tip)) %>
          <%= link_to(t(".controls.delete"), admin_tip_path(tip),
                :method   => :delete,
                :confirm  => t(".controls.delete_confirm")
              ) %>
        </td>
      </tr>
    <% end %>
  </table>

  <%= will_paginate @tips %>
<% else %>
  <div class="empty_set"><%= t(".empty_set") %></div>
<% end %>