<table id="dashboard">
  <tr>
    <td class="profile">
      <%= link_to(fb_i("Profile Overview"), character_path(current_character), :class => :title) %>

      <%= render :partial => "characters/attributes", :locals => {:character => current_character} %>
    </td>

    <td class="wall">
      <%= render :partial => "layouts/next_steps" if current_user.show_next_steps? %>

      <% if @alliance_invitations.any? %>
        <h3><%= fb_i("Alliance Invitations") %></h3>

        <table cellspacing="0" id="invitation_list">
          <% @alliance_invitations.each do |invitation| %>
            <tr>
              <td class="picture">
                <%= character_picture_link(invitation.sender) %>
              </td>
              <td class="name">
                <%= character_name_link(invitation.sender) %>
              </td>
              <td class="level"><%= fb_i("Level:") %> <%= invitation.sender.character.level %></td>
              <% content_tag(:td, :id => dom_id(invitation, :controls), :class => :controls) do %>
                <%= link_to_remote(fb_i("Accept"),
                      :url    => accept_invitation_url(invitation, :canvas => false),
                      :update => dom_id(invitation, :controls),
                      :html   => {:class => :accept}) %>
                <%= link_to_remote(fb_i("Ignore"),
                      :url    => ignore_invitation_url(invitation, :canvas => false),
                      :update => dom_id(invitation, :controls),
                      :html   => {:class => :ignore}) %>
              <% end %>
            </tr>
          <% end %>
        </table>
      <% end %>

      <% if @latest_fights.any? %>
        <h3><%= fb_i("Latest Fights") %></h3>

        <table cellspacing="0" id="fight_list">
        <% @latest_fights.each do |fight| %>
          <% content_tag_for(:tr, fight) do %>
            <td class="attacker"><%= character_picture_link(fight.attacker) %></td>
            <td class="description">
              <div class="time">
                <%= distance_of_time_in_words_to_now(fight.created_at).capitalize %> ago:
              </div>

              <div><%= fight_description(fight) %></div>
            </td>
            <td class="victim"><%= character_picture_link(fight.victim) %></td>
          <% end %>
        <% end %>
        </table>
      <% end %>
    </td>
  </tr>
</table>