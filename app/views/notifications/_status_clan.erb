<% dialog :id => :status_clan_notification do |d| %>
  <h2><%= t(".title_#{notification.status}") %></h2>
  
  <table width="100%">
    <tr>
      <td>
        <div class="text">
          <%= t(".text_#{notification.status}",
                :clan => content_tag(:strong, notification.clan.name)
              ).html_safe %>
        </div>
      </td>
      <td class="avatar">
        <%= clan_avatar(notification.clan, :width => 100) %>
      </td>
    </tr>  
  </table>
  
  <%= render("notifications/disable", :notification => notification) %>

<% end %>
