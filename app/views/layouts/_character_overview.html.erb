<table id="co" cellspacing="0" cellpadding="0">
  <tr>
    <td class="basic_money">
      <div class="label"><%= Character.human_attribute_name("basic_money") %></div>
      <div class="value"></div>

      <%= link_to_remote(t(".bank"),
            :url    => new_bank_operation_path,
            :update => :ajax,
            :html   => {:class => :bank}
          ) %>
    </td>
    <td class="vip_money">
      <div class="label"><%= Character.human_attribute_name("vip_money") %></div>
      <div class="value"></div>

      <%= link_to(t(".premium"), premium_path, :class => :premium) %>
    </td>
    <td class="health">
      <div class="timer"></div>
      <div class="label"><%= Character.human_attribute_name("health") %></div>
      <div class="value"></div>

      <%= link_to_remote(t(".hospital"),
            :url    => hospital_character_path(:current),
            :method => :get,
            :update => :ajax,
            :html   => {:class => :hospital}
          ) %>
    </td>
    <td class="energy">
      <div class="timer"></div>
      <div class="label"><%= Character.human_attribute_name("energy") %></div>
      <div class="value"></div>
    </td>
    <td class="stamina">
      <div class="timer"></div>
      <div class="label"><%= Character.human_attribute_name("stamina") %></div>
      <div class="value"></div>
    </td>
    <td class="experience">
      <div class="label"><%= Character.human_attribute_name("experience") %></div>
      <div class="value"></div>
      
      <%= percentage_bar(0) %>
    </td>
    <td class="level">
      <div class="label"><%= Character.human_attribute_name("level") %></div>
      <div class="value"></div>

      <%= link_to(t(".upgrade"), upgrade_character_path(:current), :class => :upgrade, :style => "display:none;") %>
    </td>
  </tr>
</table>

<% dom_ready do %>
  Character.update(<%= raw current_character.to_json_for_overview %>);
<% end %>