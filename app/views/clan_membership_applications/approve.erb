<% dom_ready do %>

  <% if @clan_member %>
    $("#members .participants").prepend(<%= render("clans/edit_participants_list", :member => @clan_member).to_json.html_safe %>);
    
    $("#application<%= @application.id %> .controls").html(<%= t(".accept").to_json.html_safe %>);
    
  <% elsif @application.clan.members_count >= Setting.i(:clan_max_size) %>
    alert(<%= t(".limit_exceeded").to_json.html_safe %>);
  <% end %>
  
<% end %>
