<div id="exchanges">
  <%= title(t(".title")) %>
  
  <%= render("inventories/buttons", :current => :exchanges) %>
  
  <div class="exchanges">
    <h2><%= t(".my_exchanges") %></h2>
    
    <% collection(@my_exchanges) do %>
      <table cellpadding="0" cellspacing="0">
        <tr>
          <th><%= t(".item") %></th>
          <th><%= t(".amount") %></th>
          <th><%= t(".text") %></th>
          <th></th>
        </tr>
        
        <% @my_exchanges.each do |exchange| %>
          <% content_tag_for(:tr, exchange) do %>
            <td class="item">
              <%= link_to(item_image(exchange.item, :small, :tooltip => true), exchange_path(exchange.key)) %>
            </td>
            <td class="amount">
              <%= link_to(exchange.amount, exchange_path(exchange.key)) %>
            </td>
            <td class="text">
              <%= link_to(exchange.text, exchange_path(exchange.key)) %>
            </td>
            <td class="buttons">
              <%= link_to(button(:view), exchange_path(exchange.key), 
                    :class => 'button view'
                  ) %>
              
              <%= link_to(button(:delete), exchange_path(exchange, :stored_signed_request => facebook_signed_request), 
                  :method => :delete,
                  :confirm => t(".buttons.delete_confirm"),
                  :class => 'button delete'
                ) %>
            </td>
          <% end %>
        <% end %>
      </table>
    <% end %>
  </div>
  
  <div class="exchange_offers">
    <h2><%= t(".participant_exchanges") %></h2>
    
    <% collection(@participant_exchanges) do %>
      <table cellpadding="0" cellspacing="0">
        <tr>
          <th><%= t(".item") %></th>
          <th><%= t(".amount") %></th>
          <th><%= t(".text") %></th>
        </tr>
        
        <% @participant_exchanges.each do |exchange| %>
          <% content_tag_for(:tr, exchange) do %>
            <td class="item"><%= link_to(item_image(exchange.item, :small, :tooltip => true), exchange_path(exchange.key)) %></td>
            <td class="amount"><%= link_to(exchange.amount, exchange_path(exchange.key)) %></td>
            <td class="text"><%= link_to(exchange.text, exchange_path(exchange.key)) %></td>
            
            <td class="buttons">
               <%= link_to(button(:view), exchange_path(exchange.key), 
                    :class => 'button view'
                  ) %>
            </td>
          <% end %>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
