<div class="actor">
  <%= character_picture_link(news.character) %>
</div>

<div class="subject">
  <%= property_image(news.property, :icon) %>
</div>

<div class="description">
  <%= t(".text",
        :actor    => character_name_link(news.character, {}, {:useyou => true, :capitalize => true}),
        :property => strong_tag(news.property.name),
        :level    => strong_tag(news.level)
      ).html_safe %>
</div>
