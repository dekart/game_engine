<VirtualHost *:80>
  ServerName <%= facebooker_config[:callback_domain] %>
  DocumentRoot <%= current_path %>/public
  RailsEnv <%= rails_env %>

  <Directory <%= current_path %>/public>
     AllowOverride all
     Options FollowSymlinks -MultiViews
     Order allow,deny
     Allow from all
  </Directory>
</VirtualHost>