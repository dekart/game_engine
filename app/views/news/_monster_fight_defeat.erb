<div class="actor">
  <%= character_picture_link(news.character) %>
</div>

<% if news.monster.pictures? %>
  <div class="subject">
    <%= image_tag(news.monster.pictures.url(:icon)) %>
  </div>
<% end %>

<div class="description">
  <%= t('.text',
        :actor    => character_name_link(news.character, {}, {:useyou => true, :capitalize => true}),
        :monster  => strong_tag(news.monster.name)
      ).html_safe %>
</div>

<div class="controls">
  <%= link_to(button(:reward), monster_path(news.monster), :class => 'reward button') if news.monster_fight.reward_collectable? %>
</div>


