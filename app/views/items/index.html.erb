<%= title(t(".title")) %>

<%= render("inventories/buttons", :current => :shop) %>

<%= render('layouts/promo_block', :context => :shop) if current_character.show_promo_block? %>

<% tabs :id => :shop_tabs do |t| %>

  <% @item_groups.each do |group| %>

    <% if group == @current_group %>
      <% t.tab(dom_id(group), group.name) do %>
        <%= render("list", :items => @items, :next_items => @next_items) %>
      <% end %>
    <% else %>
      <% t.tab(dom_id(group), group.name, item_group_items_path(group)) do %>
      <% end %>
    <% end %>

  <% end %>

  <% t.tab(:services, nil, service_premium_path) do %>
  <% end %>

  <% t.tab(:buy_vip_money, nil, buy_vip_premium_path) do %>
  <% end %>
<% end %>

<% dom_ready do %>
  Shop.setup();
<% end %>